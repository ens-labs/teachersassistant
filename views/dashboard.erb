  <body>
    
    <div class="container">
    <div class="row">
      <div class="col-xs-4">
      	<div class="col-xs-12">
        <div class="panel panel-primary" style="height: 500px; max-height:100% ; margin-left: 30px; margin-right: 10px;">
          <div class="panel-heading"> Group Statistics</div>
          <div class="panel-body row-centered">
           <div class="col-xs-3">
					<canvas id="javascript" height="130" width="130"></canvas>
					<br>
					<script>
						var doughnutData = [
								{
									value: 90,
									color:"#21AED3"
								},
								{
									value : 10,
									color : "#3c3c3c"
								}
							];
							var myDoughnut = new Chart(document.getElementById("javascript").getContext("2d")).Doughnut(doughnutData);
					</script>
			   </div>
        </div>
        </div>
        </div>
      </div>

      <div class="col-xs-8">
        
        <div class="col-xs-12" style="max-height: 400px;">
          <div class="panel panel-default">
            <table class="table tbl-scr" style="overflow: scroll;">
              <thead >
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Grade - Group</th>
                  <th>Present or absent</th>
                </tr>
              </thead>
              <tbody>
              	<% @students.each do |student| %>
                <tr>
                  <td><%= student.id%></td>
                  <td><%= student.name + ' ' + student.last_name%></td>
                  <td><%= student.grade_group%></td>
                  <td>
                    <button type="button" class="btn btn-primary btn-default btn-present">
                    Present
                    </button>
                    <button type="button" class= "btn btn-primary btn-abs">
                      Absent
                    </button>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<div class="panel panel-default">
	            <table class="table tbl-scr" style="height: 100px;">
	              <thead>
	                <tr>
	                  <th>Name</th>
	                  <th>Last Name</th>
	                  <th>Group - Grade</th>
	                  <th>Add</th>
	                </tr>
	              </thead>
	              <tbody>
	                <tr>
	                	<form action="/create_student" method="post">
	                  <td><input name="name" placeholder="name"/></td>
	                  <td><input name="last_name" placeholder="last name"/></td>
	                  <td><input name="grade_group" placeholder="grade - group"/></td>
	                  <td>
	                    <button type="submit" class= "btn btn-primary btn-abs">Save</button>
	                  </td>
	                  </form>
	                </tr>
	              </tbody>
	            </table>
	        </div>
			</div>
		</div>
	</div>

